<% content_for(:issue_header) do %>
  <div class="row volume sub">
    <div class="large-12 header">
      <a href="<%= issue_path(@essay_style_detail.issue) %>"><img src="http://placehold.it/900x90" ></a>
      <p>Volume 14</p>
    </div>
  </div>
<% end %>

<h1><%= @essay_style_detail.title %></h1>
<section class="crumb"><%= @essay_style_detail.link_to_issue %></section>
<%= @essay_style_detail.render_highlighted_essay %>
<h2>Essays</h2>
<ul class="small-block-grid-3 listing">
  <% @essay_style_detail.essays.each do |essay| %>
    <li><%= raw @essay_style_detail.link_to_essay(essay) %></li>
  <% end %>
</ul>
