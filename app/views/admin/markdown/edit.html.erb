<div class="large-12 columns">
    <h3 class="control-label"><%= @parent_title %></h3>
</div>
<div class="large-12 columns">
  <% flash.each do |name, msg| -%>
    <%= content_tag :div, msg, class: "alert alert-#{name}" %>
  <% end -%>
  <article class="page-body" id="previewSurround">
    <div id="markdownEditor" class="body">
      <h3 class="control-label"><%= @component_name %></h3>
      <div class="wmd-panel">
        <%= render :partial => '/admin/markdown/mdown_editor' %>
      </div>
    </div>
  </article
</div>
<div class="large-1 columns">&nbsp;</div>
<div class="large-6 columns">
  <div id="insertImageDialog" class="modal fade" title="Insert Image" tabindex="-1" role="dialog" aria-labelledby="mySmallModalLabel" aria-hidden="true" role="dialog">
    <div class="modal-dialog">
      <div class="modal-content">
        <div class="modal-header">
          <button type="button" class="close" data-dismiss="modal">Ã—</button>
          <h3>Select Image</h3>
        </div>
        <div class="modal-body">
          <form id="uploadForm" enctype="multipart/form-data">
              <div class="row">
                <div class="small-3 columns">
                  <div class="fileUpload btn btn-primary">
                    <span>Choose Image</span>
                    <input type="file" name="file" id="uploadFile" class="upload" size="60" data-action="/admin/media/upload" />
                  </div>
                </div>
                <div class="small-9 columns">
                  <input id="uploadPlaceholder" placeholder="Choose File" disabled="disabled" />
                    <input type="hidden" name="id" value=<%= @markdown_content.id %>
                  <span id="uploadLoader" class="loader_small"></span>
                </div>
              </div>
              <div class="row">
                <div class="small-3 columns">
                  <label class="right" for="altText">Alternate Text</label>
                </div>
                <div class="small-9 columns">
                  <input id="altText" class="image_upload_input" placeholder="Text for screen readers" type="text" name="alt_text" />
                </div>
              </div>
              <div class="row">
                <div class="small-3 columns">
                  <label class="right" for="captionText">Caption</label>
                </div>
                <div class="small-9 columns">
                  <input id="captionText" class="image_upload_input" placeholder="Caption for the image" type="text" name="alt_text" />
                </div>
              </div>
              <div class="row">
                <div class="small-3 columns">
                  <label class="right" for="creditText">Credit</label>
                </div>
                <div class="small-9 columns">
                  <input id="creditText" class="image_upload_input" placeholder="Credit for the image" type="text" name="alt_text" />
                </div>
              </div>
          </form>
        </div>
      <div class="modal-footer">
        <button type="button" id="closeImageDialog" class="btn btn-default" data-dismiss="modal">Close</button>
        <button type="button" id="uploadImageButton" class="btn btn-primary">Upload</button>
      </div>
    </div>
  </div>
</div>
