    </ul>
    <hr>
    <div class="awards">
    <h2>Awards</h2>
    <p><%= link_to 'Add Award', new_admin_issue_essay_essay_award_path(1, 1), class: 'btn btn-primary' %></p>
     </div>
  </div>

  <div class="large-6 columns">
    <h2>Images</h2>

    <h3>Cover Image</h3>
