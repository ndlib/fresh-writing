<%= f.input :file_relationship, collection: [:companion_material, :instructor_resource], include_blank: false %>
<%= f.input :title, hint: 'The title appears as the label for the download link for the file. ' %>
<%= f.input :body, label: 'Short Description', hint: 'Fill this out if you need more description for the companion material then the title can convey.' %>
<%= f.input :file %>

<%= f.submit 'Save', class: 'btn btn-primary' %> <%= link_to("Cancel", admin_issue_essay_path(params[:issue_id], params[:essay_id]), class: 'btn') %>
