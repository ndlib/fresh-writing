<section class="search">
  <%= form_tag essay_search_path, method: :get, class: "form-inline", role: "form" do %>
    <div class="form-group">
      <%= label_tag :q, "Search", class: "sr-only" %>
      <%= text_field_tag :q, @essay_search.keywords, placeholder: "Search", class: "form-control" %>
    </div>
    <div class="form-group">
      <%= label_tag :style, "Essay Style", class: "sr-only" %>
      <%= select_tag :style, @essay_search.essay_style_options, prompt: "Essay Style", class: "form-control" %>
    </div>

    <div class="form-group">
      <%= label_tag :issue, "Issue", class: "sr-only" %>
      <%= select_tag :issue, @essay_search.issue_options, prompt: "Issue", class: "form-control" %>
    </div>


    <div class="form-group">
      <%= label_tag :medium, "Medium", class: "sr-only" %>
      <%= select_tag :medium, @essay_search.medium_options, prompt: "Medium", class: "form-control" %>
    </div>

    <div class="form-group">
      <input type="submit" value="Search" >
    </div>
  <% end %>
</section>

<section class="results">
  <ul class="small-block-grid-2 medium-block-grid-3 listing">
    <% @essay_search.results.each do | essay_link | %>
      <li><%= essay_link.render %></li>
    <% end %>
  </ul>
</section>
